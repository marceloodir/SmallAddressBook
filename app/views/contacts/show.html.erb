<p id="notice"><%= notice %></p>

<p>
  <%= image_tag @contact.avatar.url(:medium), class: "img-rounded" if @contact.avatar.url.present?%>
</p>

<p>
  <strong>Nome:</strong>
  <%= @contact.nome %>
</p>

<p>
  <strong>Email:</strong>
  <%= @contact.email %>
</p>

<p>
  <strong>Telefone:</strong>
  <%= @contact.telefone %>
</p>


<%= link_to 'Editar', edit_contact_path(@contact), class: "btn btn-default" %>
<%= link_to 'Voltar', contacts_path, class: "btn btn-default" %>
